import java.util.*;

public class Ноутбук {
    private String модель;
    private int объемОЗУ; // в гигабайтах
    private int объемЖД; // в гигабайтах
    private String операционнаяСистема;
    private String цвет;

    public Ноутбук(String модель, int объемОЗУ, int объемЖД, String операционнаяСистема, String цвет) {
        this.модель = модель;
        this.объемОЗУ = объемОЗУ;
        this.объемЖД = объемЖД;
        this.операционнаяСистема = операционнаяСистема;
        this.цвет = цвет;
    }

    public String getМодель() {
        return модель;
    }

    public int getОбъемОЗУ() {
        return объемОЗУ;
    }

    public int getОбъемЖД() {
        return объемЖД;
    }

    public String getОперационнаяСистема() {
        return операционнаяСистема;
    }

    public String getЦвет() {
        return цвет;
    }

    public static List<Ноутбук> фильтроватьНоутбуки(Set<Ноутбук> ноутбуки, Map<Integer, Object> критерии) {
        List<Ноутбук> отфильтрованныеНоутбуки = new ArrayList<>();

        for (Ноутбук ноутбук : ноутбуки) {
            boolean подходит = true;

            for (Map.Entry<Integer, Object> entry : критерии.entrySet()) {
                int критерий = entry.getKey();
                Object значение = entry.getValue();

                switch (критерий) {
                    case 1: // ОЗУ
                        if (ноутбук.getОбъемОЗУ() < (int) значение) {
                            подходит = false;
                        }
                        break;
                    case 2: // Объем ЖД
                        if (ноутбук.getОбъемЖД() < (int) значение) {
                            подходит = false;
                        }
                        break;
                    case 3: // Операционная система
                        if (!ноутбук.getОперационнаяСистема().equals(значение)) {
                            подходит = false;
                        }
                        break;
                    case 4: // Цвет
                        if (!ноутбук.getЦвет().equals(значение)) {
                            подходит = false;
                        }
                        break;
                    // Добавьте другие критерии по мере необходимости
                    default:
                        // Неизвестный критерий - игнорировать
                        break;
                }

                if (!подходит) {
                    break;
                }
            }

            if (подходит) {
                отфильтрованныеНоутбуки.add(ноутбук);
            }
        }

        return отфильтрованныеНоутбуки;
    }

    public static void main(String[] args) {
        Ноутбук ноутбук1 = new Ноутбук("Модель 1", 8, 512, "Windows", "Черный");
        Ноутбук ноутбук2 = new Ноутбук("Модель 2", 16, 1024, "MacOS", "Серебряный");
        Ноутбук ноутбук3 = new Ноутбук("Модель 3", 4, 256, "Linux", "Синий");

        Set<Ноутбук> ноутбуки = new HashSet<>();
        ноутбуки.add(ноутбук1);
        ноутбуки.add(ноутбук2);
        ноутбуки.add(ноутбук3);

        Scanner scanner = new Scanner(System.in);
        Map<Integer, Object> критерии = new HashMap<>();

        System.out.println("Введите цифру критерия фильтрации для ОЗУ (1 - ОЗУ):");
        int выбранныйКритерий = scanner.nextInt();
        System.out.println("Введите минимальное значение для выбранного критерия:");
        int минимальноеЗначение = scanner.nextInt();

        критерии.put(выбранныйКритерий, минимальноеЗначение);

        System.out.println("Введите цифру критерия фильтрации для операционной системы (3 - ОС):");
        выбранныйКритерий = scanner.nextInt();
        System.out.println("Введите название операционной системы:");
        scanner.nextLine(); // Чтение символа новой строки после ввода числа
        String операционнаяСистема = scanner.nextLine();

        критерии.put(выбранныйКритерий, операционнаяСистема);

        List<Ноутбук> результатыФильтрации = Ноутбук.фильтроватьНоутбуки(ноутбуки, критерии);

        if (результатыФильтрации.isEmpty()) {
            System.out.println("Нет ноутбуков, соответствующих заданным критериям.");
        } else {
            System.out.println("Найденные ноутбуки:");
            for (Ноутбук ноутбук : результатыФильтрации) {
                System.out.println("Модель: " + ноутбук.getМодель() + ", ОЗУ: " + ноутбук.getОбъемОЗУ() +
                        "Гб, ЖД: " + ноутбук.getОбъемЖД() + "Гб, ОС: " + ноутбук.getОперационнаяСистема() +
                        ", Цвет: " + ноутбук.getЦвет());
            }
        }
    }
}
